{
  "AWSEBDockerrunVersion": 2,
  "containerDefinitions": [
	{
	  "name": "client",
	  "image": "neerajnsharma/multi-client",
	  "hostname": "client",
	  "essential": false,
	  "memory": 128
	   
	},
        {  
	  "name": "nginx",
	  "image": "neerajnsharma/multi-nginx",
	  "hostname": "nginx",
	  "essential": false,
	  "memory": 128,
	  "portMappings": [
           {
             "hostPort": 80,
                 "containerPort" : 80
           }
          ],
          "links": ["client","server"]

	},
	{
	  "name": "server",
	  "image": "neerajnsharma/multi-server",
	  "hostname": "api",
	  "essential": false,
	  "memory": 128
	},
        {  
	  "name": "worker",
	  "image": "neerajnsharma/multi-worker",
	  "hostname": "worker",
	  "essential": false,
	  "memory": 128
	}	
  ]
}
